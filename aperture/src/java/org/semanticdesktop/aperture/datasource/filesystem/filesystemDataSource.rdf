@prefix fresnel:  <http://www.w3.org/2004/09/fresnel#> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/> .
@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix source:   <http://aperture.semanticdesktop.org/ontology/source#> .
@prefix sourceformat: <http://aperture.semanticdesktop.org/ontology/sourceformat#> .

:foafPersonDefaultLens rdf:type fresnel:Lens ;
                       fresnel:purpose fresnel:defaultLens ;
                       fresnel:classLensDomain foaf:Person ;
                       fresnel:group :foafGroup ;
                       fresnel:showProperties ( foaf:name 
                                                foaf:surname 
                                                foaf:depiction ) .

:ImapDataSourceLens rdf:type fresnel:Lens ;
					fresnel:purpose fresnel:defaultLens ;
					fresnel:classLensDomain source:ImapDataSource ;
					fresnel:showProperties ( source:hostname
									         source:username
									         source:password ) .

:hostnameFormat rdf:type fresnel:Format ;
                fresnel:propertyFormatDomain source:hostname ;
                sourceformat:valueWidget sourceformat:TextFieldWidget .
                
:usernameFormat rdf:type fresnel:Format ;
			    fresnel:propertyFormatDomain source:username ;
			    sourceformat:valueWidget sourceformat:TextFieldWidget .
			 
:passwordFormat rdf:type fresnel:Format ;
			    fresnel:propertyFormatDomain source:password ;
			    sourceformat:valueWidget sourceformat:PasswordTextFieldWidget .
